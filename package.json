{
  "name": "pdfsigner-js",
  "version": "0.1.0",
  "author": {
    "name": "Predrag Stosic",
    "email": "predragstosic29@email.com"
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoleS/pdfsigner-js.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "main": "./dist/pdfsigner-js.cjs",
  "module": "./dist/pdfsigner-js.esm.js",
  "jsdelivr": "./dist/pdfsigner-js.iife.js",
  "exports": {
    ".": {
      "require": "./dist/pdfsigner-js.cjs",
      "import": "./dist/pdfsigner-js.esm.js",
      "types": "./dist/pdfsigner-js.d.ts"
    }
  },
  "scripts": {
    "dev": "vite --host",
    "prebuild": "rm -rf dist/*",
    "build": "tsc && vite build",
    "postbuild": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "format": "prettier . --write",
    "upgrade": "upgradeps",
    "release": "npm run build && np"
  },
  "bugs": {
    "url": "https://github.com/stoleS/pdfsigner-js/issues"
  },
  "description": "Browser-friendly PDF signing library wrapping zgapdfsigner with support for SES and AES signature levels",
  "keywords": [
    "pdf",
    "digital-signature",
    "pdf-signing",
    "ses",
    "aes",
    "qes",
    "electronic-signature",
    "zgapdfsigner"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "homepage": "https://github.com/stoleS/pdfsigner-js#readme",
  "license": "MIT",
  "private": false,
  "type": "module",
  "types": "./dist/pdfsigner-js.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/pdfsigner-js.d.ts"
      ]
    }
  },
  "typings": "./dist/pdfsigner-js.d.ts",
  "devDependencies": {
    "@padcom/eslint-config-javascript": "^0.20.1",
    "@padcom/eslint-config-typescript": "^0.20.1",
    "@types/jsdom": "27",
    "@types/node": "25",
    "@types/node-forge": "^1.3.14",
    "@vitest/coverage-v8": "4",
    "dts-bundle-generator": "9",
    "jsdom": "28",
    "lint-staged": "16",
    "np": "11",
    "prettier": "3",
    "terser": "5",
    "ts-node": "10",
    "typescript": "5",
    "upgradeps": "2",
    "vite": "7",
    "vitest": "4"
  },
  "dependencies": {
    "node-forge": "^1.3.3",
    "zgapdfsigner": "^2.7.5"
  }
}
